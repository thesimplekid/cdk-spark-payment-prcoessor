# CDK Payment Processor - Breez SDK Spark Configuration Example
# Copy this file to config.toml and fill in your values

server_addr = "127.0.0.1"
server_port = 50051

# TLS Configuration (optional)
tls_enable = false
tls_cert_path = "certs/server.crt"
tls_key_path = "certs/server.key"

[backend]
# Breez API key - Get one from https://breez.technology/request-api-key/#contact-us-form-sdk
api_key = "your-api-key-here"

# BIP-39 mnemonic seed phrase (12 or 24 words)
mnemonic = "your twelve or twenty four word mnemonic phrase goes here"

# Optional passphrase for the mnemonic
# passphrase = "your-optional-passphrase"

# Working directory for all data (defaults to ~/.cdk-spark-payment-processor)
# This directory will contain:
#   - breez/        (Breez SDK storage)
#   - quotes.db     (Quote mappings database)
# working_dir = "/custom/path/to/data"
